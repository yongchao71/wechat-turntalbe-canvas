.com-wheel{
    width: 600rpx; 
    height: 600rpx;
    clip: rect(0 600rpx 600rpx 300rpx); 
    position: absolute;
}
.com-wheel::after{
    content: '';
    width: 100%; height: 100%;
    position: absolute;
    clip: rect(0 300rpx 600rpx 0);
    border-radius: 50%;
      /* transform: rotate(60deg); */
}
.transform-3::after{
    transform: rotate(0.3333turn);
}
.transform-4::after{
    transform: rotate(0.25turn);
}
.transform-5::after{
    transform: rotate(0.2turn);
}
.transform-6::after{
    transform: rotate(0.1666turn);
}
.transform-7::after{
    transform: rotate(0.142857turn);
}
.transform-8::after{
    transform: rotate(0.125turn);
}
.transform-9::after{
    transform: rotate(0.111111turn);
}
.transform-10::after{
    transform: rotate(0.1turn);
}

.ired::after {
       background: #990077;
} 
.iwhite::after {
       background: #EFEFEF;
