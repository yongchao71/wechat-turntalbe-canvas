.com-ran{
    width: 300px; height: 300px;
      clip: rect(0 300px 300px 150px); 
    position: absolute;
}
.com-ran::after{
        content: '';
    width: 100%; height: 100%;
    position: absolute;
     clip: rect(0 150px 300px 0);
      border-radius: 50%;
      transform: rotate(60deg);
}








